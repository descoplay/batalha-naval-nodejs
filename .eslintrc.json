{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            1,
            "never"
        ],
        "no-multiple-empty-lines": [
            1,
            {
                "max": 1
            }
        ],
        "max-len": [
            1,
            100,
            100,
            {}
        ],
        "array-bracket-spacing": [
            1,
            "always",
            {}
        ],
        "comma-spacing": [
            1,
            {
                "after": true
            }
        ],
        "comma-dangle": [
            1,
            "always"
        ],
        "keyword-spacing": [
            1,
            {
                "before": true
            }
        ],
        "space-before-function-paren": 1,
        "eqeqeq": [
            1,
            "smart"
        ],
        "no-trailing-spaces": 1,
        "no-multi-spaces": 1,
        "eol-last": [
            1,
            "never"
        ],
        "indent": [
            1,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "brace-style": [
            1,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "no-return-assign": [
            0
        ],
        "no-console": "off"
    }
}